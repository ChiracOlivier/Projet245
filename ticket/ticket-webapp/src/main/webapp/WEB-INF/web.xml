<?xml version="1.0" encoding="UTF-8"?>
<resource:web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:resource="http://xmlns.jcp.org/xml/ns/javaee"
                  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
                  version="3.1">

    <resource:display-name>Ticket</resource:display-name>
    
    <resource:listener>
        <resource:listener-class>org.springframework.web.context.ContextLoaderListener</resource:listener-class>
    </resource:listener>
    <resource:context-param>
        <resource:param-name>contextConfigLocation</resource:param-name>
        <resource:param-value>classpath:/applicationContext.xml</resource:param-value>
    </resource:context-param>
</resource:web-app>
